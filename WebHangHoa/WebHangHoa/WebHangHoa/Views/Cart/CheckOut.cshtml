@model List<WebHangHoa.DTO.CartViewModel>
@{
    ViewData["Title"] = "Thanh toán";
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
    decimal? sum = 0;
    @foreach (var item in Model)
    {
        sum += item.DonGia * item.SoLuong;
    }
}

<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Thanh toán</h2>
                    <div class="breadcrumb__option">
                        <a href="./index.html">Trang chủ</a>
                        <span>Thanh toán</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="checkout spad">
    <div class="container">
     
        <div class="checkout__form">
            <h4>Chi tiết thanh toán</h4>
            <form asp-action="SubmitForm">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="message">
                                <div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Họ tên<span>*</span></p>
                                        <input type="text" formControlName="txt_name" ngModel />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="checkout__input">
                            <p>Mã bưu điện / ZIP<span>*</span></p>
                            <input type="text" />
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Điện thoại<span>*</span></p>
                                    <input type="text" formControlName="txt_sdt" ngModel>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input type="text" formControlName="txt_email" ngModel>
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input__checkbox">
                            <label for="acc">
                                Tạo tài khoản?
                                <input type="checkbox" id="acc" />
                                <span class="checkmark"></span>
                            </label>
                        </div>
                        <p>
                            Tạo tài khoản bằng cách nhập thông tin bên dưới. Nếu bạn là
                            khách hàng đã đăng ký, vui lòng đăng nhập ở đầu trang
                        </p>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Đơn hàng của bạn</h4>
                            <div class="checkout__order__products">
                                Sản phẩm <span>Tổng</span>
                            </div>
                            <ul>
                                @foreach (var item in Model)
                                {
                                    <li>
                                        @item.TenSanPham
                                        <span>(@item.DonGia * @item.SoLuong)</span>
                                    </li>
                                }
                            </ul>
                            <div class="checkout__order__total">
                                Tổng cộng <span>@sum VNĐ</span>
                            </div>
                            <div class="checkout__input__checkbox">
                                <label for="acc-or">
                                    Tạo tài khoản?
                                    <input type="checkbox" id="acc-or" />
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                          
                            <div class="checkout__input__checkbox">
                                <label for="payment">
                                    Thanh toán qua Séc
                                    <input type="checkbox" id="payment" />
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="checkout__input__checkbox">
                                <label for="paypal">
                                    Paypal
                                    <input type="checkbox" id="paypal" />
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <button type="submit" class="site-btn">ĐẶT HÀNG</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
@if (TempData["SuccessMessage"] != null)
{
    <script>
        alert("Đặt hàng thành công !");
    </script>
}