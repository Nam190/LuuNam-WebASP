
@{
    ViewData["Title"] = "Tintuc";
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
}


    <!-- Header -->
    <header class="bg-success text-white text-center py-5">
        <h1>Tin Tức Thực Phẩm</h1>
        <p>Cập nhật thông tin về rau củ và thịt tươi ngon</p>
    </header>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">Thực Phẩm Sạch</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#vegan">Rau củ</a></li>
                    <li class="nav-item"><a class="nav-link" href="#meat">Thịt</a></li>
                    <li class="nav-item"><a class="nav-link" href="#contact">Liên hệ</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container my-5">
        <!-- Vegetable Section -->
        <section id="vegan" class="my-5">
            <h2 class="text-success">Tin Tức Về Rau Củ</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card">
                    <img src="~/assets//sanpham/tin1.jpg" class="card-img-top tintuc" alt="Rau củ 1">
                        <div class="card-body">
                            <h5 class="card-title">Lợi ích của rau xanh</h5>
                            <p class="card-text">Rau xanh chứa nhiều chất xơ và vitamin, giúp tăng cường sức khỏe.</p>
                            <a href="#" class="btn btn-success">Đọc thêm</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card">
                    <img src="~/assets//sanpham/tin2.jpg" class="card-img-top tintuc" alt="Rau củ 2">
                        <div class="card-body">
                            <h5 class="card-title">Bí quyết lựa chọn rau sạch</h5>
                            <p class="card-text">Hướng dẫn chọn rau củ tươi ngon, đảm bảo an toàn thực phẩm.</p>
                            <a href="#" class="btn btn-success">Đọc thêm</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card">
                    <img src="~/assets//sanpham/tin3.jpg" class="card-img-top tintuc" alt="Rau củ 3">
                        <div class="card-body">
                            <h5 class="card-title">Công thức chế biến rau xanh</h5>
                            <p class="card-text">Những món ăn ngon miệng từ rau xanh, bổ sung dưỡng chất.</p>
                            <a href="#" class="btn btn-success">Đọc thêm</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Meat Section -->
        <section id="meat" class="my-5">
            <h2 class="text-danger">Tin Tức Về Thịt</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card">
                    <img src="~/assets//sanpham/tin4.jpg" class="card-img-top tintuc" alt="Thịt 1">
                        <div class="card-body">
                            <h5 class="card-title">Lợi ích của thịt đỏ</h5>
                            <p class="card-text">Thịt đỏ cung cấp protein và các chất dinh dưỡng cần thiết.</p>
                            <a href="#" class="btn btn-danger">Đọc thêm</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card">
                    <img src="~/assets//sanpham/tin5.jpg" class="card-img-top tintuc" alt="Thịt 2">
                        <div class="card-body">
                            <h5 class="card-title">Cách chọn thịt sạch</h5>
                            <p class="card-text">Mẹo chọn thịt tươi, đảm bảo vệ sinh và chất lượng.</p>
                            <a href="#" class="btn btn-danger">Đọc thêm</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card">
                    <img src="~/assets//sanpham/tin6.jpg" class="card-img-top tintuc" alt="Thịt 3">
                        <div class="card-body">
                            <h5 class="card-title">Công thức nấu thịt ngon</h5>
                            <p class="card-text">Những công thức nấu thịt thơm ngon, bổ dưỡng cho bữa ăn.</p>
                            <a href="#" class="btn btn-danger">Đọc thêm</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

  

